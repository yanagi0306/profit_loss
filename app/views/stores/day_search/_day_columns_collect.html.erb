<% if id % 2 == 1%>
<tr class="search-record" style="background-color:#F9F9F9">
<% else %>
<tr class="search-record">
<% end %>
  <td class="category"></td>
  <td class="subject"><%=name%></td>
<% achievements.each do |achievement|%>

  <th class='day-search-item text-center'>
    <%=(budget[column[:name].to_sym]*Store.day_ratio(achievement[:ymd],ratio)).floor.to_s(:delimited) %>
  </th>
  <th class='day-search-item text-center'>
    <%= achievement[column[:name].to_sym].to_s(:delimited)%>
  </th>
  <th class='day-search-item text-center'>
    <%= percentage(achievement[column[:name].to_sym],budget[column[:name].to_sym]*Store.day_ratio(achievement[:ymd],ratio))%>

  </th>
  <% end %>


  <td class="search-item"><%=budget_columns(columns).to_s(:delimited)%></td>
  <td class="search-item"><%=achievement_columns(columns).to_s(:delimited)%></td>
  <td class="search-item"><%=percentage(achievement_columns(columns), budget_columns(columns))%></td>
</tr>
