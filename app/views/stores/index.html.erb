<div class="content-wrapper">
  <div class="result-wrapper">
    <div class="result-title">
      今月の店舗実績
    </div>
  </div>
  <div class="index-table-all">
    <div class="search-table">
      <table class="search">
        <tr class='search-head'>
          <th class='category text-center'>カテゴリ</th>
          <th class='subject text-center'>科目</th>
          <th class='search-item text-center'><%=current_store.name%>予算</th>
          <th class='search-item text-center'><%=current_store.name%>実績</th>
          <th class='search-item text-center'><%=current_store.name%>達成率</th>
        </tr>
         <%= render partial: 'column', collection: TargetSearch.sales, as: "column" %>
        <%= render partial: 'columns_collect', locals: {name:'来店客数',columns:TargetSearch.total_number,id:1} %>
        <%= render partial: 'columns_collect', locals: {name:'ランチ客数',columns:['lunch_number'],id:0 } %>
        <%= render partial: 'columns_collect', locals: {name:'ディナー客数',columns:['dinner_number'],id:1 } %>
        <%= render partial: 'columns', locals: {name:'総売上',columns:TargetSearch.total_sales } %>
       <%= render partial: 'columns_collect', locals: {name:'食材費',columns:['food_cost'],id:0 } %>
       <%= render partial: 'columns_collect', locals: {name:'資材費',columns:['material_cost'],id:1 } %>
       <%= render partial: 'columns_collect', locals: {name:'P人件費',columns:['pert_cost'],id:0 } %>
        <%= render partial: 'columns', locals: {name:'総原価',columns:TargetSearch.total_costs } %>
        <%= render partial: 'result', locals: {name:'粗利益',profit_columns:TargetSearch.total_sales,loss_columns:TargetSearch.total_costs } %>
        <%= render partial: 'columns', locals: {name:'総販管費',columns:TargetSearch.total_other } %>
      <%= render partial: 'result', locals: {name:'営業利益',profit_columns:TargetSearch.total_sales,loss_columns:TargetSearch.total_loss } %>
      <tr class="search-record" style='background-color:#E7E4F6'>
          <td class="category">KPI</td>
          <td class="subject"></td>
          <td class="search-item"></td>
          <td class="search-item"></td>
          <td class="search-item"></td>
        </tr>
        <tr class="search-record" >
          <td class="category"></td>
          <td class="subject">客単価</td>
          <td class="search-item"><%=comparison(@total_budget[:sale],budget_columns(TargetSearch.total_number)).floor.to_s(:delimited)%></td>
          <td class="search-item"><%=comparison(@total_achievement[:sale],achievement_columns(TargetSearch.total_number)).floor.to_s(:delimited)%></td>
          <td class="search-item"></td>
        </tr>
        <tr class="search-record" style='background-color:#F9F9F9'>
          <td class="category"></td>
          <td class="subject">ランチ客単価</td>
          <td class="search-item"><%=comparison(@total_budget[:lunch_sale],@total_budget[:lunch_number]).floor.to_s(:delimited)%></td>
          <td class="search-item"><%=comparison(@total_achievement[:lunch_sale],@total_achievement[:lunch_number]).floor.to_s(:delimited)%></td>
          <td class="search-item"></td>
        </tr>
        <tr class="search-record" >
          <td class="category"></td>
          <td class="subject">ディナー客単価</td>
          <td class="search-item"><%=comparison(@total_budget[:dinner_sale],@total_budget[:dinner_number]).floor.to_s(:delimited)%></td>
          <td class="search-item"><%=comparison(@total_achievement[:dinner_sale],@total_achievement[:dinner_number]).floor.to_s(:delimited)%></td>
          <td class="search-item"></td>
        </tr>

        <tr class="search-record" style='background-color:#F9F9F9'>
          <td class="category"></td>
          <td class="subject">食材原材料比率</td>
          <td class="search-item"><%=percentage(@total_budget[:food_cost],@total_budget[:sale])%></td>
          <td class="search-item"><%=percentage(@total_achievement[:food_cost],@total_achievement[:sale])%></td>
          <td class="search-item"></td>
        </tr>
        <tr class="search-record">
          <td class="category"></td>
          <td class="subject">総原材料比率</td>
          <td class="search-item"><%=percentage(budget_columns(['food_cost','material_cost']),@total_budget[:sale])%></td>
          <td class="search-item"><%=percentage(achievement_columns(['food_cost','material_cost']),@total_achievement[:sale])%></td>
          <td class="search-item"></td>
        </tr>
        <tr class="search-record" style='background-color:#F9F9F9'>
          <td class="category"></td>
          <td class="subject">人件費率</td>
          <td class="search-item"><%=percentage(budget_columns(TargetSearch.labor_costs),@total_budget[:sale])%></td>
          <td class="search-item"><%=percentage(achievement_columns(TargetSearch.labor_costs),@total_achievement[:sale])%></td>
          <td class="search-item"></td>
        </tr>
        <tr class="search-record">
          <td class="category"></td>
          <td class="subject">パート比率</td>
          <td class="search-item"><%=percentage(@total_budget[:pert_cost],budget_columns(TargetSearch.labor_costs))%></td>
          <td class="search-item"><%=percentage(@total_achievement[:pert_cost],achievement_columns(TargetSearch.labor_costs))%></td>
          <td class="search-item"></td>
        </tr>
        <tr class="search-record" style='background-color:#F9F9F9'>
          <td class="category"></td>
          <td class="subject">F/Lコスト率</td>
         <td class="search-item"><%=percentage(budget_columns(TargetSearch.total_costs),@total_budget[:sale])%></td>
          <td class="search-item"><%=percentage(achievement_columns(TargetSearch.total_costs),@total_achievement[:sale])%></td>
          <td class="search-item"></td>
        </tr>
      </table>
    </div>
  </div>
  </div>
