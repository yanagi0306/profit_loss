<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>

      <%= form_with  url: store_session_path, local: true do |f| %>

      <div class="field">
        <%= f.label :hoge, "メールアドレス" %><br />
        <%= f.email_field :hoge, id:"user_email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :hoge, "パスワード（6文字以上）" %><br />
        <%= f.password_field :hoge, id:"user_password", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: :form__btn %>
      </div>
      <% end %>
    </div>
  </div>
</div>
